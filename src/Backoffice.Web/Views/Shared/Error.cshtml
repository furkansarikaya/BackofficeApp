@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center p-5">
                    <i class="fas fa-exclamation-triangle text-danger fa-5x mb-4"></i>
                    
                    <h1 class="display-5 fw-bold text-danger mb-3">Bir Hata Oluştu</h1>
                    
                    @if (!string.IsNullOrEmpty(Model.Message))
                    {
                        <div class="alert alert-danger">
                            @Model.Message
                        </div>
                    }
                    else
                    {
                        <p class="lead mb-4">
                            Üzgünüz, isteğiniz işlenirken beklenmeyen bir hata oluştu.
                        </p>
                    }
                    
                    @if (Model.ShowRequestId)
                    {
                        <div class="text-muted mb-4">
                            <small>
                                <strong>İstek ID:</strong> <code>@Model.RequestId</code>
                            </small>
                        </div>
                    }
                    
                    <div class="d-grid gap-2 d-sm-flex justify-content-sm-center mt-4">
                        <a href="/" class="btn btn-primary btn-lg px-4 gap-3">
                            <i class="fas fa-home me-2"></i> Ana Sayfaya Dön
                        </a>
                        <button class="btn btn-outline-secondary btn-lg px-4" onclick="window.history.back();">
                            <i class="fas fa-arrow-left me-2"></i> Geri Dön
                        </button>
                    </div>
                </div>
            </div>
            
            @if (Context.Request.Cookies.ContainsKey(".AspNetCore.Identity.Application") && 
                 CurrentUserService.IsAuthenticated)
            {
                <div class="card mt-4 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">Teknik Detaylar</h5>
                        <p class="card-text">
                            Bu hata kaydedildi ve incelenmesi için ilgili ekibe bildirildi.
                            Sorun devam ederse lütfen yöneticinizle iletişime geçin.
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
