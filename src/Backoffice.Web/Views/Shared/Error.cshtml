@model ErrorViewModel
@{
    ViewData["Title"] = "Hata";
}

<div class="flex flex-col items-center justify-center min-h-[70vh] p-4">
    <div class="max-w-2xl w-full">
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-100 dark:border-gray-700 overflow-hidden">
            <div class="p-8 text-center">
                <div class="text-red-500 dark:text-red-400 text-5xl mb-6">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>

                <h1 class="text-3xl font-bold text-red-600 dark:text-red-400 mb-6">Bir Hata Oluştu</h1>

                @if (!string.IsNullOrEmpty(Model.Message))
                {
                    <div class="bg-red-50 dark:bg-red-900 border-l-4 border-red-500 dark:border-red-700 p-4 text-red-700 dark:text-red-300 mb-6 text-left">
                        @Model.Message
                    </div>
                }
                else
                {
                    <p class="text-gray-600 dark:text-gray-400 text-lg mb-6">
                        Üzgünüz, isteğiniz işlenirken beklenmeyen bir hata oluştu.
                    </p>
                }

                @if (Model.ShowRequestId)
                {
                    <div class="text-sm text-gray-500 dark:text-gray-400 mb-6">
                        <strong>İstek ID:</strong> <code class="bg-gray-100 dark:bg-gray-700 px-1 py-0.5 rounded">@Model.RequestId</code>
                    </div>
                }

                <div class="flex flex-col sm:flex-row gap-4 justify-center mt-6">
                    <a href="/" class="inline-flex items-center justify-center px-6 py-3 bg-primary-600 dark:bg-primary-700 text-white rounded-md hover:bg-primary-700 dark:hover:bg-primary-800 focus:outline-none focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400 focus:ring-offset-2">
                        <i class="fas fa-home mr-2"></i> Ana Sayfaya Dön
                    </a>
                    <button onclick="window.history.back();" class="inline-flex items-center justify-center px-6 py-3 bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 rounded-md hover:bg-gray-300 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 dark:focus:ring-gray-400 focus:ring-offset-2">
                        <i class="fas fa-arrow-left mr-2"></i> Geri Dön
                    </button>
                </div>
            </div>
        </div>

        @if (Context.Request.Cookies.ContainsKey(".AspNetCore.Identity.Application") &&
             CurrentUserService.IsAuthenticated)
        {
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 mt-6 p-4">
                <h2 class="text-lg font-medium text-gray-800 dark:text-gray-200 mb-2">Teknik Detaylar</h2>
                <p class="text-gray-600 dark:text-gray-400">
                    Bu hata kaydedildi ve incelenmesi için ilgili ekibe bildirildi.
                    Sorun devam ederse lütfen yöneticinizle iletişime geçin.
                </p>
            </div>
        }
    </div>
</div>