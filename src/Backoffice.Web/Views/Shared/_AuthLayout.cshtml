<!DOCTYPE html>
<html lang="tr" class="h-full bg-gray-50">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Backoffice</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/output.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body class="h-full bg-gray-50 font-sans flex flex-col min-h-screen justify-center items-center p-4">
<div class="w-full max-w-md">
    <!-- Logo Area -->
    <div class="text-center mb-8">
        <div class="inline-flex items-center justify-center h-12 w-12 rounded-full bg-primary-600 text-white mb-3">
            <i class="fas fa-th-large text-2xl"></i>
        </div>
        <h1 class="text-2xl font-bold text-gray-900">Backoffice</h1>
    </div>
        
    <!-- Notifications -->
    <partial name="_Notifications" />
        
    <!-- Main Content -->
    @RenderBody()
        
    <!-- Footer -->
    <div class="text-center mt-8 text-sm text-gray-500">
        &copy; @DateTime.Now.Year Backoffice Uygulaması. Tüm hakları saklıdır.
    </div>
</div>
    
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>