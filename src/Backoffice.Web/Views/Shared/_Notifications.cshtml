@using Backoffice.Application.Common.Enums
@{
    var successMessages = TempData[$"Notification.{NotificationType.Success}"] as string[];
    var errorMessages = TempData[$"Notification.{NotificationType.Error}"] as string[];
    var warningMessages = TempData[$"Notification.{NotificationType.Warning}"] as string[];
    var infoMessages = TempData[$"Notification.{NotificationType.Info}"] as string[];
}

<div class="space-y-3 mb-6">
    @if (successMessages?.Any() == true)
    {
        foreach (var message in successMessages)
        {
            <div class="flex w-full items-center p-4 mb-4 text-green-800 border-l-4 border-green-500 bg-green-50 dark:text-green-400 dark:bg-gray-800" role="alert">
                <i class="fas fa-check-circle flex-shrink-0 mr-3"></i>
                <span class="flex-1">@message</span>
                <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-green-50 text-green-500 rounded-lg focus:ring-2 focus:ring-green-400 p-1.5 hover:bg-green-200 inline-flex h-8 w-8 dark:bg-gray-800 dark:text-green-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-3" aria-label="Close">
                    <span class="sr-only">Kapat</span>
                    <i class="fas fa-times w-5 h-5"></i>
                </button>
            </div>
        }
    }

    @if (errorMessages?.Any() == true)
    {
        foreach (var message in errorMessages)
        {
            <div class="flex w-full items-center p-4 mb-4 text-red-800 border-l-4 border-red-500 bg-red-50 dark:text-red-400 dark:bg-gray-800" role="alert">
                <i class="fas fa-times-circle flex-shrink-0 mr-3"></i>
                <span class="flex-1">@message</span>
                <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex h-8 w-8 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-3" aria-label="Close">
                    <span class="sr-only">Kapat</span>
                    <i class="fas fa-times w-5 h-5"></i>
                </button>
            </div>
        }
    }

    @if (warningMessages?.Any() == true)
    {
        foreach (var message in warningMessages)
        {
            <div class="flex w-full items-center p-4 mb-4 text-yellow-800 border-l-4 border-yellow-500 bg-yellow-50 dark:text-yellow-300 dark:bg-gray-800" role="alert">
                <i class="fas fa-exclamation-triangle flex-shrink-0 mr-3"></i>
                <span class="flex-1">@message</span>
                <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-yellow-50 text-yellow-500 rounded-lg focus:ring-2 focus:ring-yellow-400 p-1.5 hover:bg-yellow-200 inline-flex h-8 w-8 dark:bg-gray-800 dark:text-yellow-300 dark:hover:bg-gray-700" data-dismiss-target="#alert-3" aria-label="Close">
                    <span class="sr-only">Kapat</span>
                    <i class="fas fa-times w-5 h-5"></i>
                </button>
            </div>
        }
    }

    @if (infoMessages?.Any() == true)
    {
        foreach (var message in infoMessages)
        {
            <div class="flex w-full items-center p-4 mb-4 text-blue-800 border-l-4 border-blue-500 bg-blue-50 dark:text-blue-400 dark:bg-gray-800" role="alert">
                <i class="fas fa-info-circle flex-shrink-0 mr-3"></i>
                <span class="flex-1">@message</span>
                <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-blue-50 text-blue-500 rounded-lg focus:ring-2 focus:ring-blue-400 p-1.5 hover:bg-blue-200 inline-flex h-8 w-8 dark:bg-gray-800 dark:text-blue-400 dark:hover:bg-gray-700" data-dismiss-target="#alert-3" aria-label="Close">
                    <span class="sr-only">Kapat</span>
                    <i class="fas fa-times w-5 h-5"></i>
                </button>
            </div>
        }
    }
</div>

<script>
    // Close notification functionality
    document.addEventListener('DOMContentLoaded', function() {
        // Find all notification dismiss buttons
        const dismissButtons = document.querySelectorAll('[data-dismiss-target]');

        // Add click event listeners to each button
        dismissButtons.forEach(button => {
            button.addEventListener('click', function() {
                const notification = this.closest('[role="alert"]');
                if (notification) {
                    // Fade out and remove
                    notification.classList.add('opacity-0', 'transition-opacity', 'duration-300');
                    setTimeout(() => {
                        notification.remove();
                    }, 300);
                }
            });
        });

        // Auto close notifications after 5 seconds
        const notifications = document.querySelectorAll('[role="alert"]');
        notifications.forEach(notification => {
            setTimeout(() => {
                if (notification) {
                    notification.classList.add('opacity-0', 'transition-opacity', 'duration-300');
                    setTimeout(() => {
                        notification.remove();
                    }, 300);
                }
            }, 5000);
        });
    });
</script>