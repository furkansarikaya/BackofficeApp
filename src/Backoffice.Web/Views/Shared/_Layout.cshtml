<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Backoffice</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/select2/dist/css/select2.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
<!-- Top Navbar -->
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <!-- Sidebar Toggle Button -->
        <button id="sidebarToggle" class="sidebar-toggler">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center" href="/">
            <i class="fas fa-th-large me-2"></i> Backoffice
        </a>

        <!-- Navbar Right -->
        <div class="ms-auto d-flex align-items-center">
            <!-- Mini Sidebar Toggle (Sadece geniş ekranlarda görünür) -->
            <button id="sidebarMiniToggle" class="sidebar-toggler d-none d-lg-flex me-2">
                <i class="fas fa-exchange-alt"></i>
            </button>

            <!-- Kullanıcı Dropdown -->
            <div class="dropdown">
                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                    <i class="fas fa-user-circle me-1"></i>
                    <span class="d-none d-md-inline">@CurrentUserService.UserName</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li><a class="dropdown-item" href="@($"/User/Details/{CurrentUserService.UserId}")"><i class="fas fa-user me-2"></i> Profilim</a></li>
                    <li><a class="dropdown-item" href="@($"/User/ChangePassword/{CurrentUserService.UserId}")"><i class="fas fa-key me-2"></i> Şifre Değiştir</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post">
                            <button type="submit" class="dropdown-item">
                                <i class="fas fa-sign-out-alt me-2"></i> Çıkış Yap
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>

<!-- Sidebar & Content -->
<div class="d-flex">
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar Header -->
        <div class="sidebar-header">
            <div class="user-avatar">
                <i class="fas fa-user"></i>
            </div>
            <div class="user-info">
                <div>@CurrentUserService.UserName</div>
                <small>@(User.IsInRole("Administrator") ? "Yönetici" : "Kullanıcı")</small>
            </div>
        </div>

        <!-- Sidebar Menu -->
        @await Component.InvokeAsync("Menu")
    </div>

    <!-- Main Content -->
    <div class="content-wrapper">
        <!-- Notifications -->
        <partial name="_Notifications" />

        <!-- Page Header -->
        <div class="page-header">
            <h1 class="h3">@ViewData["Title"]</h1>

            @if (IsSectionDefined("PageActions"))
            {
                @await RenderSectionAsync("PageActions", required: false)
            }
        </div>

        <!-- Main Content -->
        <div class="container-fluid p-0">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="mt-auto py-3">
            <div class="container-fluid">
                <span class="text-muted">&copy; @DateTime.Now.Year - Backoffice Uygulaması</span>
            </div>
        </footer>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/select2/dist/js/select2.full.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>