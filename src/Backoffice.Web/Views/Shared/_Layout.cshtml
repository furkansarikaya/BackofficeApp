<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Backoffice</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <style>
        /* Temel stiller */
        body {
            min-height: 100vh;
            padding-top: 56px; /* Navbar için gerekli boşluk */
            display: flex;
            flex-direction: column;
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar-brand {
            font-weight: 600;
        }

        /* Ana içerik */
        .main-content {
            flex: 1;
            display: flex;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            background-color: #343a40;
            color: #fff;
            transition: all 0.3s;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            overflow-y: auto;
            min-height: calc(100vh - 56px);
            position: fixed;
            left: 0;
            top: 56px;
            z-index: 100;
        }

        .sidebar .nav-link {
            color: rgba(255, 255, 255, 0.75);
            padding: 0.75rem 1rem;
            border-radius: 0.25rem;
            margin: 0.2rem 0.5rem;
            transition: all 0.3s;
        }

        .sidebar .nav-link:hover {
            color: #fff;
            background-color: rgba(255, 255, 255, 0.1);
        }

        .sidebar .nav-link.active {
            color: #fff;
            background-color: #007bff;
        }

        .sidebar .nav-link i {
            width: 24px;
            text-align: center;
            margin-right: 0.5rem;
        }

        .sidebar-header {
            padding: 1rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .sidebar-heading {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.1rem;
            color: rgba(255, 255, 255, 0.5);
            padding: 0.75rem 1rem;
            margin-top: 1rem;
        }

        /* İçerik alanı */
        .content-wrapper {
            flex: 1;
            margin-left: 260px;
            padding: 1.5rem;
            min-height: calc(100vh - 56px);
        }

        /* Kartlar */
        .card {
            border-radius: 0.5rem;
            border: none;
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            margin-bottom: 1.5rem;
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
            padding: 1rem 1.25rem;
        }

        /* Profil dropdown */
        .user-dropdown .dropdown-toggle::after {
            display: none;
        }

        .user-avatar {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            background-color: #6c757d;
            color: #fff;
            border-radius: 50%;
            font-size: 1.2rem;
            margin-right: 0.5rem;
        }

        /* Mobil için responsive */
        @@media (max-width: 768px) {
        .sidebar {
            margin-left: -260px;
        }

        .sidebar.active {
            margin-left: 0;
        }

        .content-wrapper {
            margin-left: 0;
        }

        .content-wrapper.active {
            margin-left: 260px;
        }
        }

        /* Footer */
        footer {
            background-color: #fff;
            border-top: 1px solid #dee2e6;
            padding: 1rem 0;
            margin-top: auto;
        }

        /* Page header */
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #dee2e6;
        }
    </style>

    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
<!-- Top Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <!-- Toggle Button -->
        <button id="sidebarToggle" class="btn btn-dark">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Brand Logo -->
        <a class="navbar-brand mx-auto mx-lg-0 ms-lg-3" href="/">
            <i class="fas fa-th-large me-2"></i> Backoffice
        </a>

        <!-- Right side of navbar -->
        <div class="ms-auto d-flex align-items-center">
            <!-- Search -->
            <form class="d-none d-md-flex me-2">
                <div class="input-group">
                    <input class="form-control form-control-sm" type="search" placeholder="Ara...">
                    <button class="btn btn-outline-light btn-sm" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>

            <!-- User Menu -->
            <div class="nav-item dropdown user-dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown"
                   role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <div class="user-avatar">
                        <i class="fas fa-user"></i>
                    </div>
                    <span class="d-none d-lg-inline">@CurrentUserService.UserName</span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                    <li><h6 class="dropdown-header">@CurrentUserService.UserName</h6></li>
                    <li><a class="dropdown-item" href="@($"/User/Details/{CurrentUserService.UserId}")"><i class="fas fa-user me-2"></i> Profilim</a></li>
                    <li><a class="dropdown-item" href="@($"/User/ChangePassword/{CurrentUserService.UserId}")"><i class="fas fa-key me-2"></i> Şifre Değiştir</a></li>
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                            <button type="submit" class="dropdown-item">
                                <i class="fas fa-sign-out-alt me-2"></i> Çıkış Yap
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>

<div class="main-content">
    <!-- Sidebar (Left Menu) -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <div class="d-flex align-items-center">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div>
                    <h6 class="mb-0 text-white">@CurrentUserService.UserName</h6>
                    <small class="text-muted">@(User.IsInRole("Administrator") ? "Yönetici" : "Kullanıcı")</small>
                </div>
            </div>
        </div>

        <div class="pt-2">
            <ul class="nav flex-column">
                <!-- Ana Sayfa -->
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Home" ? "active" : "")"
                       asp-controller="Home" asp-action="Index">
                        <i class="fas fa-home"></i> Ana Sayfa
                    </a>
                </li>

                <!-- Kullanıcı Yönetimi -->
                <li class="sidebar-heading">
                    Kullanıcı Yönetimi
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "User" ? "active" : "")"
                       asp-controller="User" asp-action="Index">
                        <i class="fas fa-users"></i> Kullanıcılar
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"].ToString() == "Role" ? "active" : "")"
                       asp-controller="Role" asp-action="Index">
                        <i class="fas fa-user-shield"></i> Roller
                    </a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content-wrapper" id="content">
        <!-- Notifications -->
        <partial name="_Notifications" />

        <!-- Page Header -->
        <div class="page-header">
            <h1 class="h3">@ViewData["Title"]</h1>

            @if (IsSectionDefined("PageActions"))
            {
                @RenderSection("PageActions", required: false)
            }
        </div>

        <!-- Main Content -->
        <div class="container-fluid p-0">
            @RenderBody()
        </div>

        <!-- Footer -->
        <footer class="text-center mt-auto">
            <div class="container">
                <span class="text-muted">&copy; @DateTime.Now.Year - Backoffice Uygulaması</span>
            </div>
        </footer>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

<script>
    // Sidebar toggle for mobile
    document.addEventListener('DOMContentLoaded', function() {
        const sidebarToggle = document.getElementById('sidebarToggle');
        const sidebar = document.getElementById('sidebar');
        const content = document.getElementById('content');

        sidebarToggle.addEventListener('click', function() {
            sidebar.classList.toggle('active');
            content.classList.toggle('active');
        });

        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(event) {
            const isMobile = window.innerWidth < 768;
            const isOutsideSidebar = !sidebar.contains(event.target);
            const isNotToggleButton = !sidebarToggle.contains(event.target);
            const isSidebarActive = sidebar.classList.contains('active');

            if (isMobile && isOutsideSidebar && isNotToggleButton && isSidebarActive) {
                sidebar.classList.remove('active');
                content.classList.remove('active');
            }
        });

        // Auto-close submenu items when clicking elsewhere
        const navLinks = document.querySelectorAll('.sidebar .nav-link');
        navLinks.forEach(link => {
            link.addEventListener('click', function(e) {
                const isMobile = window.innerWidth < 768;
                if (isMobile && link.getAttribute('data-bs-toggle') !== 'collapse') {
                    sidebar.classList.remove('active');
                    content.classList.remove('active');
                }
            });
        });
    });
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>