@model Backoffice.Web.ViewModels.User.ChangePasswordViewModel
@{
    ViewData["Title"] = "Şifre Değiştir";
}

<div class="bg-white rounded-lg shadow-sm">
    <div class="px-6 py-4 border-b border-gray-200">
        <h5 class="text-lg font-medium text-gray-900">@Model.UserName için şifre değiştir</h5>
    </div>
    <div class="p-6">
        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-red-600 mb-4"></div>

            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="UserName" />

            <div class="p-4 mb-6 text-blue-700 bg-blue-50 border-l-4 border-blue-500 rounded-r-md">
                <div class="flex">
                    <i class="fas fa-info-circle mt-0.5 mr-3"></i>
                    <p>Kullanıcının şifresi güvenli bir şekilde sıfırlanacaktır.</p>
                </div>
            </div>

            <div class="space-y-6">
                <div class="space-y-2">
                    <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700">Yeni Şifre</label>
                    <div class="relative">
                        <input asp-for="NewPassword" class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="NewPassword" class="absolute left-0 -bottom-5 text-sm text-red-600"></span>
                    </div>
                    <p class="mt-2 text-sm text-gray-500">En az 6 karakter uzunluğunda olmalıdır.</p>
                </div>

                <div class="space-y-2">
                    <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">Şifre Tekrar</label>
                    <div class="relative">
                        <input asp-for="ConfirmPassword" class="w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" />
                        <span asp-validation-for="ConfirmPassword" class="absolute left-0 -bottom-5 text-sm text-red-600"></span>
                    </div>
                </div>
            </div>

            <div class="flex justify-between mt-8">
                <a asp-action="Details" asp-route-id="@Model.UserId" class="inline-flex items-center px-4 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-md">
                    <i class="fas fa-arrow-left mr-2"></i> İptal
                </a>
                <button type="submit" class="inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                    <i class="fas fa-key mr-2"></i> Şifreyi Değiştir
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Şifre görünürlüğünü değiştirmek için düğmeler ekleyebilirsiniz (opsiyonel)
            function addPasswordToggle(inputId) {
                const input = document.getElementById(inputId);
                if (!input) return;

                const button = document.createElement('button');
                button.type = 'button';
                button.className = 'absolute inset-y-0 right-0 pr-3 flex items-center text-gray-500';
                button.innerHTML = '<i class="fas fa-eye"></i>';
                button.setAttribute('aria-label', 'Şifreyi göster/gizle');

                button.addEventListener('click', function() {
                    if (input.type === 'password') {
                        input.type = 'text';
                        button.innerHTML = '<i class="fas fa-eye-slash"></i>';
                    } else {
                        input.type = 'password';
                        button.innerHTML = '<i class="fas fa-eye"></i>';
                    }
                });

                input.parentNode.style.position = 'relative';
                input.parentNode.appendChild(button);
            }

            // Şifre alanları için görünürlük toggle'ları ekleme
            addPasswordToggle('NewPassword');
            addPasswordToggle('ConfirmPassword');
        });
    </script>
}