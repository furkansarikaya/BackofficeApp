@model Backoffice.Web.ViewModels.User.UserDetailViewModel
@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

@section PageActions {
    <div class="btn-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Düzenle
        </a>
        <a asp-action="ChangePassword" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="fas fa-key"></i> Şifre Değiştir
        </a>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-cog"></i> İşlemler
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <form asp-action="ToggleActive" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @if (Model.IsActive)
                        {
                            <button type="submit" class="dropdown-item text-danger" 
                                    @(Model.Roles.Contains("Administrator") ? "disabled" : "")>
                                <i class="fas fa-user-slash"></i> Pasif Yap
                            </button>
                        }
                        else
                        {
                            <button type="submit" class="dropdown-item text-success">
                                <i class="fas fa-user-check"></i> Aktif Yap
                            </button>
                        }
                    </form>
                </li>
                @if (!Model.Roles.Contains("Administrator"))
                {
                    <li>
                        <button type="button" class="dropdown-item text-danger" 
                                data-bs-toggle="modal" data-bs-target="#deleteModal" 
                                data-user-id="@Model.Id" data-user-name="@Model.UserName">
                            <i class="fas fa-trash"></i> Sil
                        </button>
                    </li>
                }
            </ul>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Kullanıcı Bilgileri</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">Kullanıcı Adı:</div>
                    <div class="col-md-8">@Model.UserName</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">E-posta:</div>
                    <div class="col-md-8">@Model.Email</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">Ad:</div>
                    <div class="col-md-8">@(string.IsNullOrEmpty(Model.FirstName) ? "-" : Model.FirstName)</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">Soyad:</div>
                    <div class="col-md-8">@(string.IsNullOrEmpty(Model.LastName) ? "-" : Model.LastName)</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">Durum:</div>
                    <div class="col-md-8">
                        @if (Model.IsActive)
                        {
                            <span class="badge bg-success">Aktif</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Pasif</span>
                        }
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">Kayıt Tarihi:</div>
                    <div class="col-md-8">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">Son Giriş:</div>
                    <div class="col-md-8">
                        @if (Model.LastLoginAt.HasValue)
                        {
                            @Model.LastLoginAt.Value.ToString("dd.MM.yyyy HH:mm")
                        }
                        else
                        {
                            <span class="text-muted">Henüz giriş yapmadı</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Roller</h5>
            </div>
            <div class="card-body">
                @if (Model.Roles.Any())
                {
                    <div class="list-group">
                        @foreach (var role in Model.Roles)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <span>@role</span>
                                @if (role == "Administrator")
                                {
                                    <span class="badge bg-danger">Yönetici</span>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-warning mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i> Bu kullanıcının atanmış rolü bulunmuyor.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Listeye Dön
    </a>
</div>

<!-- Silme Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Kullanıcı Silme</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
            </div>
            <div class="modal-body">
                <p>
                    <span id="userName"></span> kullanıcısını silmek istediğinize emin misiniz?
                </p>
                <p class="text-danger">
                    <i class="fas fa-exclamation-triangle"></i> Bu işlem geri alınamaz.
                </p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post" id="deleteForm">
                    <input type="hidden" name="id" id="userId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                    <button type="submit" class="btn btn-danger">Sil</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Delete modal için kullanıcı bilgilerini ayarla
        var deleteModal = document.getElementById('deleteModal');
        if (deleteModal) {
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var userId = button.getAttribute('data-user-id');
                var userName = button.getAttribute('data-user-name');
                
                var modalUserName = document.getElementById('userName');
                var modalUserId = document.getElementById('userId');
                
                modalUserName.textContent = userName;
                modalUserId.value = userId;
            });
        }
    </script>
}