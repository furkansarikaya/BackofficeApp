@model Backoffice.Web.ViewModels.Menu.MenuItemFormViewModel
@{
    ViewData["Title"] = "Yeni Menü Öğesi";
}

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            @await Html.PartialAsync("_CreateOrUpdate", Model)

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> İptal
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Kaydet
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>

    <script>
        // Bölüm başlığı seçildiğinde Controller/Action/URL alanlarını devre dışı bırak
        $(document).ready(function () {
            function updateFormBasedOnSectionHeader() {
                var isSectionHeader = $('#IsSectionHeader').is(':checked');

                if (isSectionHeader) {
                    $('#Controller, #Action, #Url, #RequiredPermissionCode').prop('disabled', true);
                } else {
                    $('#Controller, #Action, #Url, #RequiredPermissionCode').prop('disabled', false);
                }
            }

            // Sayfa yüklendiğinde ve checkbox değiştiğinde form alanlarını güncelle
            updateFormBasedOnSectionHeader();
            $('#IsSectionHeader').change(updateFormBasedOnSectionHeader);
        });
    </script>
}