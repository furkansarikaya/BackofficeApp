@model Backoffice.Web.ViewModels.Home.DashboardViewModel
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container-fluid p-0">
    <!-- Hoş Geldiniz Kartı -->
    <div class="bg-gradient-to-r from-primary-600 to-primary-700 rounded-lg shadow-md mb-6 text-white">
        <div class="p-5">
            <div class="flex flex-col md:flex-row md:items-center">
                <div class="flex-grow">
                    <h2 class="text-2xl font-bold mb-2">Hoş Geldiniz, @CurrentUserService.UserName</h2>
                    <p class="text-white/90">
                        Backoffice yönetim panelinize hoş geldiniz. Bu panel üzerinden sistemdeki tüm verileri
                        yönetebilir ve ayarları değiştirebilirsiniz.
                    </p>
                </div>
                <div class="hidden md:flex items-center justify-center p-4">
                    <i class="fas fa-tachometer-alt text-5xl text-white/70"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Kullanıcı İstatistikleri -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-100 transition-all hover:shadow-md">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="bg-primary-100 text-primary-600 p-3 rounded-full mr-4">
                        <i class="fas fa-users text-2xl"></i>
                    </div>
                    <div>
                        <h6 class="text-gray-500 text-sm font-medium">Toplam Kullanıcı</h6>
                        <h3 class="text-2xl font-bold">@Model.UserStatistics?.TotalUsers</h3>
                    </div>
                </div>
            </div>
            <div class="px-5 py-3 border-t border-gray-100">
                @if (Model.UserStatistics?.UserIncrease > 0)
                {
                    <span class="text-emerald-500">
                        <i class="fas fa-arrow-up text-xs mr-1"></i> @Model.UserStatistics?.UserIncrease%
                    </span>
                }
                else if (Model.UserStatistics?.UserIncrease < 0)
                {
                    <span class="text-red-500">
                        <i class="fas fa-arrow-down text-xs mr-1"></i> @Math.Abs(Model.UserStatistics?.UserIncrease ?? 0)%
                    </span>
                }
                else
                {
                    <span class="text-gray-500">
                        <i class="fas fa-minus text-xs mr-1"></i> @Model.UserStatistics?.UserIncrease%
                    </span>
                }
                <span class="text-gray-500 text-sm ml-1">geçen aydan</span>
            </div>
        </div>

        <!-- İşlem İstatistikleri -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-100 transition-all hover:shadow-md">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="bg-emerald-100 text-emerald-600 p-3 rounded-full mr-4">
                        <i class="fas fa-file-alt text-2xl"></i>
                    </div>
                    <div>
                        <h6 class="text-gray-500 text-sm font-medium">Aktif İşlemler</h6>
                        <h3 class="text-2xl font-bold">@Model.UserStatistics?.ActiveUsers</h3>
                    </div>
                </div>
            </div>
            <div class="px-5 py-3 border-t border-gray-100">
                <span class="text-gray-500">
                    <i class="fas fa-users text-xs mr-1"></i> Aktif Kullanıcılar
                </span>
            </div>
        </div>

        <!-- Tamamlanan İstatistikler (örnek) -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-100 transition-all hover:shadow-md">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="bg-amber-100 text-amber-600 p-3 rounded-full mr-4">
                        <i class="fas fa-chart-bar text-2xl"></i>
                    </div>
                    <div>
                        <h6 class="text-gray-500 text-sm font-medium">Tamamlanan</h6>
                        <h3 class="text-2xl font-bold">856</h3>
                    </div>
                </div>
            </div>
            <div class="px-5 py-3 border-t border-gray-100">
                <span class="text-emerald-500">
                    <i class="fas fa-arrow-up text-xs mr-1"></i> 8.7%
                </span>
                <span class="text-gray-500 text-sm ml-1">geçen aydan</span>
            </div>
        </div>

        <!-- Bildirimler (örnek) -->
        <div class="bg-white rounded-lg shadow-sm border border-gray-100 transition-all hover:shadow-md">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="bg-sky-100 text-sky-600 p-3 rounded-full mr-4">
                        <i class="fas fa-bell text-2xl"></i>
                    </div>
                    <div>
                        <h6 class="text-gray-500 text-sm font-medium">Bildirimler</h6>
                        <h3 class="text-2xl font-bold">12</h3>
                    </div>
                </div>
            </div>
            <div class="px-5 py-3 border-t border-gray-100">
                <a href="#" class="text-primary-600 hover:text-primary-700 text-sm">Tümünü Gör</a>
            </div>
        </div>
    </div>

    <!-- Ana İçerik -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Son Aktiviteler -->
        <div class="lg:col-span-2">
            <div class="bg-white rounded-lg shadow mb-6">
                <div class="flex justify-between items-center px-5 py-4 border-b border-gray-100">
                    <h5 class="font-medium text-gray-700">Son Aktiviteler</h5>
                </div>
                <div class="p-0">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead class="text-xs font-medium text-gray-500 bg-gray-50 uppercase tracking-wider">
                            <tr>
                                <th class="px-5 py-3 text-left">Kullanıcı</th>
                                <th class="px-5 py-3 text-left">İşlem</th>
                                <th class="px-5 py-3 text-left">Durum</th>
                                <th class="px-5 py-3 text-left">Tarih</th>
                                <th class="px-5 py-3 text-left"></th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-100">
                            @if (Model.RecentActivities != null && Model.RecentActivities.Items.Any())
                            {
                                foreach (var activity in Model.RecentActivities.Items)
                                {
                                    <tr class="hover:bg-gray-50">
                                        <td class="px-5 py-4">
                                            <div class="flex items-center">
                                                <div class="w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center text-sm font-medium mr-3">
                                                    <span>@activity.UserName?.Substring(0, Math.Min(2, activity.UserName.Length))</span>
                                                </div>
                                                <span class="font-medium text-gray-900">@activity.UserName</span>
                                            </div>
                                        </td>
                                        <td class="px-5 py-4 text-sm text-gray-700">@activity.ActivityType</td>
                                        <td class="px-5 py-4">
                                            @{
                                                var badgeClass = "bg-gray-100 text-gray-800";

                                                if (activity.ActivityType.Contains("Create")) badgeClass = "bg-green-100 text-green-800";
                                                else if (activity.ActivityType.Contains("Update")) badgeClass = "bg-blue-100 text-blue-800";
                                                else if (activity.ActivityType.Contains("Delete")) badgeClass = "bg-red-100 text-red-800";
                                                else if (activity.ActivityType.Contains("Login")) badgeClass = "bg-blue-100 text-blue-800";
                                                else if (activity.ActivityType.Contains("Failed")) badgeClass = "bg-yellow-100 text-yellow-800";
                                            }
                                            <span class="px-2 py-1 text-xs font-medium rounded-full @badgeClass">@activity.Category</span>
                                        </td>
                                        <td class="px-5 py-4 text-sm text-gray-500">@activity.Timestamp.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                                        <td class="px-5 py-4 text-right">
                                            <a href="@Url.Action("Details", "ActivityLog", new { id = activity.Id })" class="p-1.5 text-gray-400 hover:text-gray-600 bg-gray-50 hover:bg-gray-100 rounded-md">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="px-5 py-4 text-center text-gray-500">Henüz aktivite kaydı bulunmamaktadır.</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="border-t border-gray-100 p-4 text-center">
                    <a href="@Url.Action("Index", "ActivityLog")" class="text-primary-600 hover:text-primary-700 text-sm font-medium">
                        Tüm Aktiviteleri Gör <i class="fas fa-arrow-right ml-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Sağ Sütun -->
        <div class="space-y-6">
            <!-- Hızlı Erişim -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-100">
                <div class="px-5 py-4 border-b border-gray-100">
                    <h5 class="font-medium text-gray-700">Hızlı Erişim</h5>
                </div>
                <div class="p-5">
                    <div class="grid grid-cols-2 gap-4">
                        <a href="@Url.Action("Index", "User")" class="block group">
                            <div class="bg-gray-50 group-hover:bg-gray-100 rounded-lg p-4 text-center h-full">
                                <div class="text-primary-500 mb-3">
                                    <i class="fas fa-users text-2xl"></i>
                                </div>
                                <h6 class="text-sm font-medium text-gray-800">Kullanıcı Yönetimi</h6>
                            </div>
                        </a>
                        <a href="@Url.Action("Index", "Menu")" class="block group">
                            <div class="bg-gray-50 group-hover:bg-gray-100 rounded-lg p-4 text-center h-full">
                                <div class="text-gray-500 mb-3">
                                    <i class="fas fa-bars text-2xl"></i>
                                </div>
                                <h6 class="text-sm font-medium text-gray-800">Menü Yönetimi</h6>
                            </div>
                        </a>
                        <a href="@Url.Action("Index", "Role")" class="block group">
                            <div class="bg-gray-50 group-hover:bg-gray-100 rounded-lg p-4 text-center h-full">
                                <div class="text-emerald-500 mb-3">
                                    <i class="fas fa-user-tag text-2xl"></i>
                                </div>
                                <h6 class="text-sm font-medium text-gray-800">Rol Yönetimi</h6>
                            </div>
                        </a>
                        <a href="@Url.Action("Index", "IpFilter")" class="block group">
                            <div class="bg-gray-50 group-hover:bg-gray-100 rounded-lg p-4 text-center h-full">
                                <div class="text-sky-500 mb-3">
                                    <i class="fas fa-shield-alt text-2xl"></i>
                                </div>
                                <h6 class="text-sm font-medium text-gray-800">IP Filtreleme</h6>
                            </div>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Duyurular -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-100">
                <div class="px-5 py-4 border-b border-gray-100">
                    <h5 class="font-medium text-gray-700">Duyurular</h5>
                </div>
                <div class="divide-y divide-gray-100">
                    <a href="#" class="block p-5 hover:bg-gray-50">
                        <div class="flex justify-between mb-1">
                            <h6 class="text-sm font-medium text-primary-600">Sistem Güncellemesi</h6>
                            <span class="text-xs text-gray-500">Bugün</span>
                        </div>
                        <p class="text-sm text-gray-600">
                            Sistemde bakım çalışması yapılacaktır. 22:00-23:00 saatleri arasında kesinti yaşanabilir.
                        </p>
                    </a>
                    <a href="#" class="block p-5 hover:bg-gray-50">
                        <div class="flex justify-between mb-1">
                            <h6 class="text-sm font-medium text-primary-600">Yeni Özellik</h6>
                            <span class="text-xs text-gray-500">Dün</span>
                        </div>
                        <p class="text-sm text-gray-600">
                            Rapor modülüne yeni özellikler eklendi. Artık PDF ve Excel formatında dışa aktarım yapabilirsiniz.
                        </p>
                    </a>
                    <a href="#" class="block p-5 hover:bg-gray-50">
                        <div class="flex justify-between mb-1">
                            <h6 class="text-sm font-medium text-primary-600">Toplantı Hatırlatması</h6>
                            <span class="text-xs text-gray-500">2 gün önce</span>
                        </div>
                        <p class="text-sm text-gray-600">
                            Haftalık değerlendirme toplantısı yarın saat 10:00'da video konferans ile yapılacaktır.
                        </p>
                    </a>
                </div>
                <div class="border-t border-gray-100 p-4 text-center">
                    <a href="#" class="text-primary-600 hover:text-primary-700 text-sm font-medium">
                        Tüm Duyuruları Gör <i class="fas fa-arrow-right ml-1"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>