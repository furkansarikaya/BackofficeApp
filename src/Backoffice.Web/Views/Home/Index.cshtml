@model Backoffice.Web.ViewModels.Home.DashboardViewModel
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="container-fluid p-0">
    <!-- Hoş Geldiniz Kartı -->
    <div class="bg-gradient-to-r from-primary-600 to-primary-700 rounded-lg shadow-md mb-6 text-white">
        <div class="p-5">
            <div class="flex flex-col md:flex-row md:items-center">
                <div class="flex-grow">
                    <h2 class="text-2xl font-bold mb-2">Hoş Geldiniz, @CurrentUserService.UserName</h2>
                    <p class="text-white/90">
                        Backoffice yönetim panelinize hoş geldiniz. Bu panel üzerinden sistemdeki tüm verileri
                        yönetebilir ve ayarları değiştirebilirsiniz.
                    </p>
                </div>
                <div class="hidden md:flex items-center justify-center p-4">
                    <i class="fas fa-tachometer-alt text-5xl text-white/70"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
        <!-- Kullanıcı İstatistikleri -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 transition-all hover:shadow-md">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="bg-primary-100 dark:bg-primary-700 text-primary-600 dark:text-primary-200 p-3 rounded-full mr-4">
                        <i class="fas fa-users text-2xl"></i>
                    </div>
                    <div>
                        <h6 class="text-gray-500 dark:text-gray-400 text-sm font-medium">Toplam Kullanıcı</h6>
                        <h3 class="text-2xl font-bold">@Model.UserStatistics?.TotalUsers</h3>
                    </div>
                </div>
            </div>
            <div class="px-5 py-3 border-t border-gray-100 dark:border-gray-700">
                @if (Model.UserStatistics?.UserIncrease > 0)
                {
                    <span class="text-emerald-500 dark:text-emerald-400">
                        <i class="fas fa-arrow-up text-xs mr-1"></i> @Model.UserStatistics?.UserIncrease%
                    </span>
                }
                else if (Model.UserStatistics?.UserIncrease < 0)
                {
                    <span class="text-red-500 dark:text-red-400">
                        <i class="fas fa-arrow-down text-xs mr-1"></i> @Math.Abs(Model.UserStatistics?.UserIncrease ?? 0)%
                    </span>
                }
                else
                {
                    <span class="text-gray-500 dark:text-gray-400">
                        <i class="fas fa-minus text-xs mr-1"></i> @Model.UserStatistics?.UserIncrease%
                    </span>
                }
                <span class="text-gray-500 dark:text-gray-400 text-sm ml-1">geçen aydan</span>
            </div>
        </div>

        <!-- İşlem İstatistikleri -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 transition-all hover:shadow-md">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="bg-emerald-100 dark:bg-emerald-700 text-emerald-600 dark:text-emerald-200 p-3 rounded-full mr-4">
                        <i class="fas fa-file-alt text-2xl"></i>
                    </div>
                    <div>
                        <h6 class="text-gray-500 dark:text-gray-400 text-sm font-medium">Aktif İşlemler</h6>
                        <h3 class="text-2xl font-bold">@Model.UserStatistics?.ActiveUsers</h3>
                    </div>
                </div>
            </div>
            <div class="px-5 py-3 border-t border-gray-100 dark:border-gray-700">
                <span class="text-gray-500 dark:text-gray-400">
                    <i class="fas fa-users text-xs mr-1"></i> Aktif Kullanıcılar
                </span>
            </div>
        </div>

        <!-- Tamamlanan İstatistikler -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 transition-all hover:shadow-md">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="bg-amber-100 dark:bg-amber-700 text-amber-600 dark:text-amber-200 p-3 rounded-full mr-4">
                        <i class="fas fa-chart-bar text-2xl"></i>
                    </div>
                    <div>
                        <h6 class="text-gray-500 dark:text-gray-400 text-sm font-medium">Tamamlanan</h6>
                        <h3 class="text-2xl font-bold">856</h3>
                    </div>
                </div>
            </div>
            <div class="px-5 py-3 border-t border-gray-100 dark:border-gray-700">
                <span class="text-emerald-500 dark:text-emerald-400">
                    <i class="fas fa-arrow-up text-xs mr-1"></i> 8.7%
                </span>
                <span class="text-gray-500 dark:text-gray-400 text-sm ml-1">geçen aydan</span>
            </div>
        </div>

        <!-- Bildirimler -->
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700 transition-all hover:shadow-md">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="bg-sky-100 dark:bg-sky-700 text-sky-600 dark:text-sky-200 p-3 rounded-full mr-4">
                        <i class="fas fa-bell text-2xl"></i>
                    </div>
                    <div>
                        <h6 class="text-gray-500 dark:text-gray-400 text-sm font-medium">Bildirimler</h6>
                        <h3 class="text-2xl font-bold">12</h3>
                    </div>
                </div>
            </div>
            <div class="px-5 py-3 border-t border-gray-100 dark:border-gray-700">
                <a href="#" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 text-sm">Tümünü Gör</a>
            </div>
        </div>
    </div>

    <!-- Ana İçerik -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Son Aktiviteler -->
        <div class="lg:col-span-2">
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow mb-6">
                <div class="flex justify-between items-center px-5 py-4 border-b border-gray-100 dark:border-gray-700">
                    <h5 class="font-medium text-gray-700 dark:text-gray-200">Son Aktiviteler</h5>
                </div>
                <div class="p-0">
                    <div class="overflow-x-auto">
                        <table class="w-full">
                            <thead>
                            <tr class="text-left text-gray-500 dark:text-gray-400">
                                <th class="px-5 py-3">Kullanıcı</th>
                                <th class="px-5 py-3">İşlem</th>
                                <th class="px-5 py-3">Durum</th>
                                <th class="px-5 py-3">Tarih</th>
                                <th class="px-5 py-3"></th>
                            </tr>
                            </thead>
                            <tbody class="text-gray-700 dark:text-gray-300">
                            @if (Model.RecentActivities != null && Model.RecentActivities.Items.Any())
                            {
                                @foreach (var activity in Model.RecentActivities.Items)
                                {
                                    <tr class="hover:bg-gray-50 dark:hover:bg-gray-700">
                                        <td class="px-5 py-4">
                                            <div class="flex items-center">
                                                <div class="w-8 h-8 bg-primary-600 text-white rounded-full flex items-center justify-center text-sm font-medium mr-3">
                                                    <span>@activity.UserName?.Substring(0, Math.Min(2, activity.UserName.Length))</span>
                                                </div>
                                                <span class="font-medium text-gray-900 dark:text-gray-200">@activity.UserName</span>
                                            </div>
                                        </td>
                                        <td class="px-5 py-4 text-sm text-gray-700 dark:text-gray-300">@activity.ActivityType</td>
                                        <td class="px-5 py-4">
                                            @{
                                                var badgeClass = "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300";

                                                if (activity.ActivityType.Contains("Create")) badgeClass = "bg-green-100 text-green-800 dark:bg-green-700 dark:text-green-300";
                                                else if (activity.ActivityType.Contains("Update")) badgeClass = "bg-blue-100 text-blue-800 dark:bg-blue-700 dark:text-blue-300";
                                                else if (activity.ActivityType.Contains("Delete")) badgeClass = "bg-red-100 text-red-800 dark:bg-red-700 dark:text-red-300";
                                                else if (activity.ActivityType.Contains("Login")) badgeClass = "bg-blue-100 text-blue-800 dark:bg-blue-700 dark:text-blue-300";
                                                else if (activity.ActivityType.Contains("Failed")) badgeClass = "bg-yellow-100 text-yellow-800 dark:bg-yellow-700 dark:text-yellow-300";
                                            }
                                            <span class="px-2 py-1 text-xs font-medium rounded-full @badgeClass">@activity.Category</span>
                                        </td>
                                        <td class="px-5 py-4 text-sm text-gray-500 dark:text-gray-400">@activity.Timestamp.ToLocalTime().ToString("dd.MM.yyyy HH:mm")</td>
                                        <td class="px-5 py-4 text-right">
                                            <a href="@Url.Action("Details", "ActivityLog", new { id = activity.Id })" class="p-1.5 text-gray-400 hover:text-gray-600 dark:text-gray-300 dark:hover:text-gray-100 bg-gray-50 dark:bg-gray-700 hover:bg-gray-100 dark:hover:bg-gray-600 rounded-md">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="px-5 py-4 text-center text-gray-500 dark:text-gray-400">Henüz aktivite kaydı bulunmamaktadır.</td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="border-t border-gray-100 dark:border-gray-700 p-4 text-center">
                    <a href="@Url.Action("Index", "ActivityLog")" class="text-primary-600 dark:text-primary-400 hover:text-primary-700 dark:hover:text-primary-300 text-sm font-medium">
                        Tüm Aktiviteleri Gör <i class="fas fa-arrow-right ml-1"></i>
                    </a>
                </div>
            </div>
        </div>

        <!-- Sağ Sütun -->
        <div class="space-y-6">
            <!-- Hızlı Erişim -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700">
                <div class="px-5 py-4 border-b border-gray-100 dark:border-gray-700">
                    <h5 class="font-medium text-gray-700 dark:text-gray-200">Hızlı Erişim</h5>
                </div>
                <div class="p-5">
                    <div class="grid grid-cols-2 gap-4">
                        <a href="@Url.Action("Index", "User")" class="block group">
                            <div class="bg-gray-50 dark:bg-gray-700 group-hover:bg-gray-100 dark:group-hover:bg-gray-600 rounded-lg p-4 text-center h-full">
                                <div class="text-primary-500 dark:text-primary-200 mb-3">
                                    <i class="fas fa-users text-2xl"></i>
                                </div>
                                <h6 class="text-sm font-medium text-gray-800 dark:text-gray-200">Kullanıcı Yönetimi</h6>
                            </div>
                        </a>
                        <a href="@Url.Action("Index", "Menu")" class="block group">
                            <div class="bg-gray-50 dark:bg-gray-700 group-hover:bg-gray-100 dark:group-hover:bg-gray-600 rounded-lg p-4 text-center h-full">
                                <div class="text-gray-500 dark:text-gray-200 mb-3">
                                    <i class="fas fa-bars text-2xl"></i>
                                </div>
                                <h6 class="text-sm font-medium text-gray-800 dark:text-gray-200">Menü Yönetimi</h6>
                            </div>
                        </a>
                        <a href="@Url.Action("Index", "Role")" class="block group">
                            <div class="bg-gray-50 dark:bg-gray-700 group-hover:bg-gray-100 dark:group-hover:bg-gray-600 rounded-lg p-4 text-center h-full">
                                <div class="text-emerald-500 dark:text-emerald-200 mb-3">
                                    <i class="fas fa-user-tag text-2xl"></i>
                                </div>
                                <h6 class="text-sm font-medium text-gray-800 dark:text-gray-200">Rol Yönetimi</h6>
                            </div>
                        </a>
                        <a href="@Url.Action("Index", "IpFilter")" class="block group">
                            <div class="bg-gray-50 dark:bg-gray-700 group-hover:bg-gray-100 dark:group-hover:bg-gray-600 rounded-lg p-4 text-center h-full">
                                <div class="text-sky-500 dark:text-sky-200 mb-3">
                                    <i class="fas fa-shield-alt text-2xl"></i>
                                </div>
                                <h6 class="text-sm font-medium text-gray-800 dark:text-gray-200">IP Filtreleme</h6>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>