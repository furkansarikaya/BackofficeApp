@{
    ViewData["Title"] = "Hesap Kilitlendi";
    Layout = "_AuthLayout";
}

<div class="bg-white rounded-lg shadow-lg border border-gray-100 overflow-hidden">
    <div class="p-8 text-center">
        <div class="text-yellow-500 text-5xl mb-6">
            <i class="fas fa-lock"></i>
        </div>

        <h1 class="text-2xl font-bold text-gray-800 mb-4">Hesabınız Kilitlendi</h1>

        <p class="text-gray-600 mb-8">
            Çok sayıda başarısız giriş denemesi nedeniyle hesabınız geçici olarak kilitlenmiştir.
            Lütfen daha sonra tekrar deneyiniz veya yönetici ile iletişime geçiniz.
        </p>

        <a asp-controller="Account" asp-action="Login" class="inline-flex items-center px-4 py-2 bg-primary-600 text-white rounded-md hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2">
            <i class="fas fa-arrow-left mr-2"></i> Giriş Sayfasına Dön
        </a>
    </div>
</div>

<div class="text-center mt-6 text-sm text-gray-500">
    &copy; @DateTime.Now.Year Backoffice Uygulaması
</div>