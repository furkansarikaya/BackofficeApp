@{
    ViewData["Title"] = "Erişim Reddedildi";
}

<div class="flex flex-col items-center justify-center min-h-[70vh] p-4">
    <div class="max-w-lg w-full bg-white dark:bg-gray-800 rounded-lg shadow-lg border border-gray-100 dark:border-gray-700 overflow-hidden">
        <div class="p-8 text-center">
            <div class="text-red-500 dark:text-red-400 text-5xl mb-6">
                <i class="fas fa-exclamation-circle"></i>
            </div>

            <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-200 mb-4">Erişim Reddedildi</h1>

            <p class="text-gray-600 dark:text-gray-400 mb-8">
                Bu sayfaya erişim yetkiniz bulunmamaktadır. Sistem yöneticinize başvurarak
                gerekli izinleri talep edebilirsiniz.
            </p>

            <a asp-controller="Home" asp-action="Index" class="inline-flex items-center px-4 py-2 bg-primary-600 dark:bg-primary-700 text-white rounded-md hover:bg-primary-700 dark:hover:bg-primary-800 focus:outline-none focus:ring-2 focus:ring-primary-500 dark:focus:ring-primary-400 focus:ring-offset-2">
                <i class="fas fa-home mr-2"></i> Ana Sayfaya Dön
            </a>
        </div>
    </div>
</div>